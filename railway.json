{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["cd backend && npm ci"]
        },
        "build": {
          "cmds": ["cd backend && npm run build"]
        }
      },
      "start": {
        "cmd": "cd backend && node dist/src/main.js"
      }
    }
  }
}
